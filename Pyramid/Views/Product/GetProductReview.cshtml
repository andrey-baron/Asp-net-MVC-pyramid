@model IEnumerable<Pyramid.Entity.Review>

@{
    ViewBag.Title = "Отзывы на "+(string)ViewBag.TitlePage;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="section-header">
    <h2>@ViewBag.Title</h2>
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-12 col-review">
            <div class="card">
                <div class="card-header card-header-lg">
                    <p>@item.Name</p>
                </div>
                <div class="card-block">
                    <div class="admin-product__addition-values">
                        @item.Content
                    </div>
                    @Html.ActionLink("Удалить", "Delete", "Review", new { id = item.Id }, new { @class="btn btn-primary"})
                </div>

            </div>
        </div>

    }
</div>