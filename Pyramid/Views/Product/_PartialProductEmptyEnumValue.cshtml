@model int

<div class="admin-product-enumvalue">
    <div class="row">
        @*@Html.Hidden(String.Format("EnumValues[{0}].Id", Model) )*@
        @*@Html.Hidden(String.Format("EnumValues[{0}].Id", Model), "")*@
        <div class="col-md-8">
            @Html.Label("Фильтр", htmlAttributes: new { @class = "control-label" })

            @Html.DropDownList(String.Format("Filters[{0}].Id", Model), new SelectList(ViewBag.FiltersSelectList, "Value", "Text", ""), "Выбрать", new { @class = "form-control js-product-filter-control", data_index = Model.ToString() })

