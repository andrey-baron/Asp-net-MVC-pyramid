@model List<Pyramid.Models.CategoryAdminViewModel>
@for (int i = 0; i < Model.Count; i++)
{

<div class="checkbox">
    @Html.Hidden(String.Format("Categories[{0}].Id", i), Model[i].Id)
    @Html.CheckBox(String.Format("Categories[{0}].Checked", i), Model[i].Checked, new { @class = ""})
    <label>@Model[i].Title</label>
</div>

}