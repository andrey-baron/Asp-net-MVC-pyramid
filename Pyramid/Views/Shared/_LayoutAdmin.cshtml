<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    @Styles.Render("~/Content/cssreset")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/admincss")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/tinymce")


    
    
   




</head>
<body class="control-panel @((User.Identity.IsAuthenticated)? "with-side-menu":"")">
    <div class="wrapper">
        <header class="header-admin">
            <div class="container-fluid">
                <a href="/Admin" class="header-admin__site-logo">
                    <img class="header-admin__logoSA" src="~/Content/img/logoSA.jpg" alt="">
                </a>
            </div>
        </header>
      
           
        @if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar">
                <div class="sidebar__panel">
                    <ul class="sidebar-menu">
                        <li class="sidebar-menu__item sidebar-menu__item_red-icon">
                            <a class="sidebar-menu__link" href="@Url.Action("AdminIndex","Category")">
                                <i class="font-icon glyphicon glyphicon-list-alt"></i>
                                <span class="lbl">Категории</span>
                            </a>
                        </li>
                        <li class="sidebar-menu__item sidebar-menu__item_blue-icon">
                            <a class="sidebar-menu__link" href="@Url.Action("AdminIndex","Product")">
                                <i class="font-icon glyphicon glyphicon-list-alt"></i>
                                <span class="lbl">Товары</span>
                            </a>
                        </li>
                        <li class="sidebar-menu__item sidebar-menu__item_orange-icon">
                            <a class="sidebar-menu__link" href="@Url.Action("","Filter")">
                                <i class="font-icon glyphicon glyphicon-list-alt"></i>
                                <span class="lbl">Фильтры</span>
                            </a>
                        </li>
                        <li class="sidebar-menu__item sidebar-menu__item_green-icon">
                            <a class="sidebar-menu__link" href="@Url.Action("","ImageManager")">
                                <i class="font-icon glyphicon glyphicon-list-alt"></i>
                                <span class="lbl">Файловый менеджер</span>
                            </a>
                        </li>
                        <li class="sidebar-menu__item sidebar-menu__item_green-icon">
                            <a class="sidebar-menu__link" href="@Url.Action("","EnumValue")">
                                <i class="font-icon glyphicon glyphicon-list-alt"></i>
                                <span class="lbl">Значения фильтров</span>
                            </a>
                        </li>
                        <li class="sidebar-menu__item sidebar-menu__item_green-icon">
                            <a class="sidebar-menu__link" href="@Url.Action("AdminIndex","Page")">
                                <i class="font-icon glyphicon glyphicon-list-alt"></i>
                                <span class="lbl">Страницы</span>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        }
        <div class="page-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
            
            
        
    </div>

   
