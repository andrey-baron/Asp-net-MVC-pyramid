<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/Content/css/reset.css">
    <link rel="stylesheet" href="~/Content/libs/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-grid10.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-grid15.css">
    <link rel="stylesheet" href="~/Content/css/main.css">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/libs/jquery.bxslider.min.css">
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/ajax")
    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>*@
    <script src="~/Content/libs/jquery.bxslider.min.js"></script>
    @*<script src="~/Content/libs/jquery-ui.min.js"></script>
    <script src="~/Content/scr/jquery-ui.min.js"></script>*@
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>



</head>
<body>
    <div class="wrapper">
        <div class="container-fluid container_no-pad">

            @if (ViewBag.Controller!=null&& ViewBag.Action!=null&&((string)ViewBag.Controller).ToLower() == "home" && ((string)ViewBag.Action).ToLower() == "index")
            {
                Html.RenderPartial("_PartialHeaderHomePage");
            }
            else
            {
                Html.RenderPartial("_PartialHeaderOtherPages");
            }
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <div class="container-fluid container_no-pad">
            <div class="call-to-action call-to-action_footer">
                <p class="call-to-action__head-title">Каталог товаров</p>
                <p class="footer__switch">Свернуть</p>
            </div>
            <div class="footer__catalog-products">
                <div class="row no-gutter  ft-grid">
                   
                    @{ IEnumerable<Pyramid.Models.AllCategoriesViewModel> footerCategories = (IEnumerable<Pyramid.Models.AllCategoriesViewModel>)ViewBag.FooterCategories;}
                    @if (footerCategories != null)
                    {


                        foreach (var item in footerCategories)
                        {
                            <div class="col-md-3 grid-sizer ft-item">
                                <div class="footer__catalog-item">
                                    <a href="@Url.Action("Index","Category",new { id=item.Category.Id})"><p class="footer__catalog-item-title">@item.Category.Title</p></a>
                                    <ul class="footer__catalog-list">
                                        @foreach (var subs in item.SubCategories)
                                        {
                                            <li class="footer__catalog-list-item"><a href="@Url.Action("Index","Category",new { id=subs.Id})">@subs.Title</a></li>

                                        }



                                    </ul>
                                </div>
                            </div>
                        }
                    }


                </div>
            </div>
            <div class="footer_bottom">
                <div class="row no-gutter">
                    <div class="col-md-3">
                        <div class="footer__copyright">
                            <p class="footer__copyright-text">2016 © Пирамида.<span class="footer__copyright-text_yellow">Строй</span></p>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="footer__menu-wrap">
                            <ul class="footer__menu">
                                <li class="footer__menu-item"><a class="footer__menu-item-link" href="@Url.Action("Index","Page",new { id = 4 })">Наша компания</a></li>
                                <li class="footer__menu-item"><a class="footer__menu-item-link" href="@Url.Action("Index","Page",new { id = 5 })">Наши марки</a></li>
                                <li class="footer__menu-item"><a class="footer__menu-item-link" href="@Url.Action("Index","Page",new { id = 6 })">Сотрудничество</a></li>
                                <li class="footer__menu-item"><a class="footer__menu-item-link" href="@Url.Action("Index","Page",new { id = 7 })">Наши вакансии</a></li>
                                <li class="footer__menu-item"><a class="footer__menu-item-link" href="@Url.Action("Index","Page",new { id = 8 })">Контакты</a></li>

                                <li class="footer__menu-item"><a class="footer__menu-item-link" href="@Url.Action("Index","Event")">Акции</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/main/main.js"></script>
</body>
</html>