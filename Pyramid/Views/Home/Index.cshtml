@foreach (var item in Model)
{
    <div class="decoration-work">
        <div class="row no-gutter">
            <div class="col-ten-lg-6 col-md-12 ">
                <div class="decoration-work__scope-points" @(item.BannerWithPoints != null && item.BannerWithPoints.Images != null ? string.Format("style=background:url({0})no-repeat", item.BannerWithPoints.Images.ServerPathImg) : "")>
                    @if (item.BannerWithPoints != null && item.BannerWithPoints.PointOnImgs != null)
                    {


                        foreach (var point in item.BannerWithPoints.PointOnImgs)
                        {
                            if (point.Products != null)
                            {
                                <div class="decoration-work__point" style="top:@(point.CoordY)%; left:@(point.CoordX)%;">
                                    <div class="decoration-work__product">
                                        <div class="decoration-work__product-btn-close"></div>
                                        <img src="@(point.Products.ThumbnailImg!=null?point.Products.ThumbnailImg.ServerPathImg:Pyramid.Global.Config.PathNotFilledImage)" alt="" class="decoration-work__product-img">
                                        <p class="decoration-work__product-title">@point.Products.Title</p>
                                        <div class="decoration-work__product-price product__item-price @Pyramid.Tools.ProductTool.GetClassByTypePrice((int)point.Products.TypePrice)">
                                            <p class="product__item-price-inner"><span class="big-decimal">@point.Products.Price</span> руб.</p>
                                        </div>
                                        <div class="decoration-work__product-add-to-cart product__buy product__buy_add-to-cart">
                                            <p>Добавить в корзину</p>
                                        </div>
                                    </div>
                                </div>
                            }


                        }
                    }
                    @*<div class="decoration-work__point" style="top: 40%; left: 40%;">
                            <div class="decoration-work__product">
                                <div class="decoration-work__product-btn-close"></div>
                                <img src="~/Content/img/test-offer.png" alt="" class="decoration-work__product-img">
