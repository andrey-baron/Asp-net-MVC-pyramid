@model Pyramid.Entity.Recommendation
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var modelFriendlyUrlBase = (FriendlyUrlBaseModel)ViewBag.FriendlyUrlBase;
}
<div class="page">
    <div class="page__title">@Model.Title</div>
    <div class="row no-gutter">
        <div class="col-f-lg-3">
            @Html.Partial("_PartialSliderOnPages")
        </div>

        <div class="col-f-lg-12">
            <div class="row no-gutter">
                @if (Model.Image!=null && Model.Image.ServerPathImg!=null)
                {
                <div class="col-lg-12">
                    <div class="page__event-banner">
                        <div class="page__event-banner-div-img" style="background:url(@Model.Image.ServerPathImg)no-repeat"></div>
                        @*<img class="" src="@Model.Image.ServerPathImg" alt="" />*@
                    </div>
                </div>
                }
                <div class="col-lg-9">
                    <div class="page__content-wrap">
                        
                        <div class="page__content">@MvcHtmlString.Create(Model.Content)</div>

                    </div>
                </div>
                
                <div class="col-lg-12">

                    <a href="@(!string.IsNullOrEmpty(modelFriendlyUrlBase.RecommendationBaseFriendlyUrl)? modelFriendlyUrlBase.RecommendationBaseFriendlyUrl: Url.Action("Index","Recommendation"))" class="page__link-event">Все советы</a>


                </div>
            </div>
        </div>

    </div>
</div>
