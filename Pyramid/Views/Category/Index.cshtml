@model Pyramid.Models.CategoryModels.CategoryViewModel
@{
    ViewBag.Title = "cat";
    Layout = "~/Views/Shared/_LayoutOtherPages.cshtml";
}

<div class="category">
    @Html.HiddenFor(m=>Model.Id)
    <div class="row no-gutter">
        <div class="col-ten-md-4">
            <p class="category__title">@Model.Title</p>
        </div>
        <div class="col-ten-md-6">
            <div class="category__sort">
                <ul class="category__sort-list">
                    <li class="category__sort-list-item">Сортировать по:</li>
                    <li class="category__sort-list-item"><a href="">цене</a></li>
                    <li class="category__sort-list-item"><a href="">названию</a></li>
                    <li class="category__sort-list-item"><a href="">популярности</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row no-gutter">
        <div class="col-ten-lg-2 col-md-3">
            @using (Html.BeginForm())
            {
                <div class="category__sidebar">
                    @for (int i = 0; i < Model.Filters.Count; i++)
                    {

                    @Html.HiddenFor(m => Model.Filters[i].Id)
                        <div class="category__filter-block">
                            @Html.HiddenFor(m=>Model.Filters[i].Title)
                            <p class="category__filter-title">@Model.Filters[i].Title</p>
                            <div class="category__filter-block-controls">
                                @for (int j = 0; j < Model.Filters[i].EnumValues.Count; j++)
                                {

                                    <div class="checkbox">
                                        @Html.HiddenFor(m => Model.Filters[i].EnumValues[j].Id)
                                        @Html.CheckBoxFor(m=> Model.Filters[i].EnumValues[j].Checked, new { @class = "category__input-chekbox" })
                                        <label>@Model.Filters[i].EnumValues[j].Key</label>
                                    </div>
                                }
                                
                                
                            </div>
                        </div>

                    }
                    <div class="category__filter-block">
                        <p class="category__filter-title">Заголовок2</p>
                        <div class="category__filter-block-controls">
                            <div class="sliderUI"></div>
                            <label class="label_spinner">от</label>
                            <input type="text" class="spinnerUI1" value="" />
                            <label class="label_spinner">до</label>
                            <input type="text" class="spinnerUI2" value="" />

                        </div>
                    </div>

                    <button class="btn btn-default">Применить</button>
                </div>
                
            }
        </div>
        <div class="col-f-lg-3 col-md-3">
            <div class="product__item">

                <img src="~/Content/img/test-offer.png" alt="" class="product__item-img">

                <p class="product__item-title">
                    Краскопульт SATA Spray Master RP с алюминиевым верхним бачком
                    0,7 л нагнетательного типа
                </p>
                <div class="product__item-price product__item-price_best">
                    <div class="triangle-up"></div>
                    <div class="triangle-down"></div>
                    <p class="product__item-price-inner"><span class="big-decimal">45 675</span> руб.</p>
                </div>
                <div class="product__item__hover_block_wrapper">
                    <div class="product__item__hover_block_wrapper__item product__in-stock">
                        <p>в наличии</p>
                    </div>
                    <a class="product__item__hover_block_wrapper__item" href="">
                        <div class="product__buy product__buy_one-click">
                            <p>Купить в один клик</p>
                        </div>
                    </a>
                    <a class="product__item__hover_block_wrapper__item" href="">
                        <div class="product__buy product__buy_add-to-cart">
                            <p>Добавить в корзину</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        @foreach (var item in Model.Products)
        {
            <div class="col-f-lg-3  col-md-3">
                <div class="product__item">

                    <img src="~/Content/img/test-offer.png" alt="" class="product__item-img">

                    <p class="product__item-title">@item.Title</p>
                    <div class="product__item-price product__item-price_limited">
                        <div class="triangle-up"></div>
                        <div class="triangle-down"></div>
                        <p class="product__item-price-inner"><span class="big-decimal">@item.Price</span> руб.</p>
                    </div>
                    <div class="product__item__hover_block_wrapper">
                        <div class="product__item__hover_block_wrapper__item product__in-stock">
                            <p>в наличии</p>
                        </div>
                        <a class="product__item__hover_block_wrapper__item" href="">
                            <div class="product__buy product__buy_one-click">
                                <p>Купить в один клик</p>
                            </div>
                        </a>
                        <a class="product__item__hover_block_wrapper__item" href="">
                            <div class="product__buy product__buy_add-to-cart">
                                <p>Добавить в корзину</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

        }

