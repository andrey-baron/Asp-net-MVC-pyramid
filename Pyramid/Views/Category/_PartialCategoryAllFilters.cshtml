@model List<Pyramid.Entity.Filter>

@for (int i = 0; i < Model.Count; i++)
{
    <div class="admin-category__filter">
        <div class="form-group">
            <div class="row">
                @Html.Hidden(String.Format("Filters[{0}].Id", i), Model[i].Id)
                <div class="col-md-4">
                    @Html.Label("Фильтр", htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-7">
                    @Html.Label(Model[i].Title, new { @class = "form-control" })
                </div>

                <div class="col-md-1">
                    @*<label class="control-label">удалить</label>*@
                    <button type="button" class="tabledit-edit-button btn btn-sm btn-default js-btn-category-filter-delete" style="float: none;" data-ajaxid="@Model[i].Id">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}